<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <title>Student Dashboard</title>
    <meta content="width=device-width, initial-scale=1.0" name="viewport">
    <meta content="" name="keywords">
    <meta content="" name="description">

    <!-- Favicon -->
    <link href="/img/favicon.ico" rel="icon">

    <!-- Google Web Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Heebo:wght@400;500;600;700&display=swap" rel="stylesheet">

    <!-- Icon Font Stylesheet -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.10.0/css/all.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.4.1/font/bootstrap-icons.css" rel="stylesheet">

    <!-- Libraries Stylesheet -->
    <link href="/lib/owlcarousel/assets/owl.carousel.min.css" rel="stylesheet">
    <link href="/lib/tempusdominus/css/tempusdominus-bootstrap-4.min.css" rel="stylesheet" />

    <!-- Customized Bootstrap Stylesheet -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">

    <!-- Template Stylesheet -->
    <link href="/css/template.css" rel="stylesheet">
</head>

<body>
    <!-- Sidebar Start -->
    <div class="custom-sidebar position-relative bg-white d-inline-flex p-1">
      <!-- Spinner Start -->
      <div
        id="spinner"
        class="show bg-white position-fixed translate-middle w-100 vh-100 top-50 start-50 d-flex align-items-center justify-content-center"
      >
        <div
          class="spinner-border text-primary"
          style="width: 3rem; height: 3rem"
          role="status"
        >
          <span class="sr-only">Loading...</span>
        </div>
      </div>
      <!-- Spinner End -->
      <div class="sidebar pe-3 pb-3 d-flex flex-column align-items-start" >
        
        <nav class="navbar bg-light navbar-light flex-column align-items-start" style="margin-top: 100px; width: 100%;">
          <a href="/" class="nav-item nav-link active">
            <i class="bi bi-house"></i>
            Home
          </a>
          <div class="nav-item">
            <a href="/newAdd" class="nav-item nav-link active"
              ><i class="fa fa-plus-circle me-2"></i>Add Item</a
            >
          </div>
          <div class="nav-item">
            <a href="/fetchForOwner" class="nav-item nav-link active"
              ><i class="fa fa-cogs me-2"></i>Manage</a
            >
          </div>
          <div class="nav-item">
            <a href="/chat" class="nav-item nav-link active">
              <i class="bi bi-chat-fill me-2"></i>Messages
            </a>
          </div>
        </nav>
    
      </div>
    </div>
    <!-- Sidebar End -->

        <!-- Content Start -->
        <div class="content" >
            <!-- Navbar Start -->
            <nav class="navbar navbar-expand bg-light navbar-light sticky-top px-0 py-0">
              <a href="#" class="sidebar-toggler flex-shrink-0">
                  <i class="fa fa-bars"></i>
              </a>
              <div class="navbar-nav align-items-center ms-auto">
                <div class="navbar-brand  mx-4 mb-3  " >
                  <h3 class="text-primary"><i class="fa"></i>Community Yard</h3>
                </div>
                <div class="d-flex align-items-center ms-4 mb-4">
                  <% if(user !== null) { %>
                  <div class="position-relative">
                    <a href="#" data-bs-toggle="dropdown"></a>
                    <img
                      class="rounded-circle"
                      src="<%= user.pic %>"
                      alt=""
                      style="width: 40px; height: 40px"
                    />
                    <div
                      class="bg-success rounded-circle border border-2 border-white position-absolute end-0 bottom-0 p-1"
                    ></div>
                  </div>
                  <a
                    href="#"
                    class="nav-link dropdown-toggle"
                    data-bs-toggle="dropdown"
                  >
                    <span class="d-none d-lg-inline-flex"><%= user.name %> </span>
                  </a>
                  <div
                    class="dropdown-menu dropdown-menu-end bg-light border-0 rounded-0 rounded-bottom m-0"
                  >
                    <a href="/profile/<%= user.username %>" class="dropdown-item">My Profile</a>
                    <a href="/logout" class="dropdown-item">Log Out</a>
                  </div>
                  <% } else { %>
                  <a href="auth/google" data-bs-toggle="dropdown"></a>
                  <div class="position-relative">
                    <img
                      class="rounded-circle"
                      src="/img/user.jpg"
                      alt=""
                      style="width: 40px; height: 40px"
                    />
                    <div
                      class="bg-success rounded-circle border border-2 border-white position-absolute end-0 bottom-0 p-1"
                    ></div>
                  </div>
                  <a
                    href="#"
                    class="nav-link dropdown-toggle"
                    data-bs-toggle="dropdown"
                  >
                    <h6>User</h6>
                    <span class="d-none d-lg-inline-flex">Log In </span>
                  </a>
                  <div
                    class="dropdown-menu dropdown-menu-end bg-light border-0 rounded-0 rounded-bottom m-0"
                  >
                    <a href="auth/google" class="dropdown-item"
                      >Sign In with Google</a
                    >
                  </div>
                  <% } %>
                </div>
              </div>
            </nav>
<script>
    function showSpinner() {
        var spinner = document.getElementById("spinner");
        if (spinner) {
            spinner.style.display = "block";
        }
    }
    function hideSpinner() {
        var spinner = document.getElementById("spinner");
        if (spinner) {
            spinner.style.display = "none";
        }
    }
  </script>
<!-- Navbar End -->

<!-- Sidebar End -->
